{
  "name": "ghinspect",
  "displayName": "GH Inspect",
  "version": "0.1.0",
  "description": "A VSCode extension for inspecting Git blame and related PRs",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onStartupFinished"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-blame-sidebar",
          "title": "Git Blame Inspector",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "git-blame-sidebar": [
        {
          "id": "gitBlameView",
          "name": "Git Blame Info",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "ghinspect.getBlameInfo",
        "title": "Get Git Blame Info",
        "icon": "$(git-commit)"
      },
      {
        "command": "ghinspect.copyToClipboard",
        "title": "Copy to Clipboard",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "ghinspect.copyToClipboard",
          "when": "view == gitBlameView",
          "group": "inline"
        }
      ],
      "editor/context": [
        {
          "command": "ghinspect.getBlameInfo",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.86.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.0"
  },
  "publisher": "user",
  "private": true,
  "type": "module"
}
